<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameOverLayout">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/backgroundGameOver"
        android:src="@mipmap/bluepin"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:alpha=".7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/logo"
        android:layout_marginBottom="247dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/playAgain"
        android:src="@mipmap/playagain"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout6" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You Score"
            android:id="@+id/gameOverScore"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Best Score"
            android:id="@+id/bestScore"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/newLoc"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:id="@+id/gridLayout5"
        android:rowCount="1" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/optionsButton"
            android:src="@drawable/blueoptions"
            android:background="#ffffff"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_below="@+id/gridLayout2"
            android:layout_alignRight="@+id/submitButton"
            android:layout_alignEnd="@+id/submitButton"
            android:scaleType="fitCenter"
            android:onClick="popUpOptions"/>
    </GridLayout>

</RelativeLayout>